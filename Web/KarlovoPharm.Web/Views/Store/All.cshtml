@using KarlovoPharm.Web.ViewModels.Products
@model KarlovoPharm.Web.Paging.PaginatedList<ProductSingleViewModel>

@{var currentSort = this.ViewData["CurrentSort"]; }
@{ var currentPage = this.ViewData["CurrentPage"];}
@{ var searchString = this.ViewData["SearchString"];}

<div class="site-section">
    <div class="container">

        <div class="row">
            <form id="order-form" method="get" asp-action="All">
                <div class="col-lg-6">
                    <select name="sortOrder" id="sort">
                        <option value="" disabled selected>-- Няма избран филтър --</option>
                        <option value="price-lowest-to-highest">Цена ниска към висока</option>
                        <option value="price-highest-to-lowest">Цена висока към ниска</option>
                    </select>
                </div>
            </form>

            <form method="get" asp-action="All" class="form-inline justify-content-center">
                <input class="form-control mr-sm-2" type="text" name="searchString" placeholder="Въведи ключова дума" value="@searchString">
                <button class="btn btn-info" type="submit">Търси</button>
            </form>
        </div>


        <div id="products" class="row">
            @foreach (var product in Model)
            {
                <div class="product col-sm-6 col-lg-4 text-center item mb-4">
                    <a asp-controller="Products" asp-action="Details" asp-route-productId="@product.Id"> <img src="@product.Picture" width="150" alt="Image"></a>
                    <h3 class="text-dark"><a asp-controller="Products" asp-action="Details" asp-route-productId="@product.Id">@product.Name</a></h3>
                    <p class="price"> @product.Price</p>
                    <a href="#" class="btn btn-warning">Добави в количка</a>
                    <a href="#" class="btn btn-danger">Дoбави в любими</a>
                </div>
            }
        </div>

        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <div class="site-block-27">
                    <ul>
                        <li class="page-item @prevDisabled">
                            <a class="page-link" asp-action="All" asp-route-sortOrder="@currentSort" asp-route-pageNumber="1">&laquo;</a>
                        </li>
                        <li class="page-item @prevDisabled">
                            <a class="page-link" asp-action="All" asp-route-sortOrder="@currentSort" asp-route-pageNumber="@(Model.PageIndex - 1)">&lt;</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item"><a class="page-link" asp-action="All" asp-route-sortOrder="@currentSort" asp-route-pageNumber="@i">@i</a></li>
                            @if (i > 10)
                            {
                                break;
                            }
                        }
                        <li class="page-item @nextDisabled">
                            <a class="page-link" asp-action="All" asp-route-sortOrder="@currentSort" asp-route-pageNumber="@(Model.PageIndex + 1)">&gt;</a>
                        </li>
                        <li class="page-item @nextDisabled">
                            <a class="page-link" asp-action="All" asp-route-sortOrder="@currentSort" asp-route-pageNumber="@Model.TotalPages">&raquo;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>



    </div>

    <script>

        $('#sort').change(function () {
            $('#order-form').submit();
        });
    </script>

</div>

