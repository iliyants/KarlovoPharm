@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@if (this.TempData["InfoMessage"] != null)
{
    @await Component.InvokeAsync("InfoMessage", new { message = this.TempData["InfoMessage"] });

}
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-5 text-black">Вход</h2>
            </div>
            <div class="col-md-12">
                <form method="post">
                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-md-12">
                                <label for="Username" class="text-black">Потребителско име <span class="text-danger">*</span></label>
                                <input asp-for="Input.Username" type="text" class="form-control" placeholder="Потребителско име">
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="Password" class="text-black">Парола <span class="text-danger">*</span></label>
                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Парола">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Влез">
                            </div>
                        </div>
                        <a href="/Identity/Account/Register" class="btn btn-primary btn-lg btn-block">
                            <span class="d-inline">Регистрация</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


