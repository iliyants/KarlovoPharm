@model KarlovoPharm.Web.InputModels.Categories.Create.CategoryCreateInputModel

@{
    ViewData["Title"] = "Създай Категория";
}


<div class="row justify-content-center">
    <div class="col-md-4 ">
        <h1 style="color: black">@ViewData["Title"]</h1>
        <hr />
        <div class="col-md-10">
            @if (this.TempData["Error"] != null)
            {
                @await Component.InvokeAsync("ErrorAlert", new { message = this.TempData["Error"] });
            }
            <form asp-controller="Categories" asp-action="Add" method="post" class="form">
                <div class="form-group">
                    <label for="CategoryName" class="text-black">Име на категория <span class="text-danger">*</span></label>
                    <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Въведете името на категорията тук.">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <input type="submit" class="btn btn-primary btn-lg btn-block" value="Създай">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

